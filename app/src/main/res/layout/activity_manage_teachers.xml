<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".admin.ManageTeachersActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Teachers"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Teachers:"
        android:textSize="16sp"
        android:textStyle="italic"/>

    <ListView
        android:id="@+id/lvTeachers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:padding="8dp"/>

    <Button
        android:id="@+id/btnDeleteTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Selected Teacher"
        android:backgroundTint="?attr/colorError"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Teacher:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etTeacherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etTeacherEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etTeacherPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Temporary Password (min 6 chars)"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnAddTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Teacher"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnBackTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Admin Menu"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

</LinearLayout>