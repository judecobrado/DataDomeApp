<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0F0F0">

    <!-- Quiz title -->
    <TextView
        android:id="@+id/tvQuizTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quiz Title"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <!-- Scheduled date/time -->
    <TextView
        android:id="@+id/tvQuizDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No time set"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginTop="2dp"/>

    <!-- Buttons: Edit, Delete, Publish/Unpublish, Set Time -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <Button
            android:id="@+id/btnEditQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"/>

        <Button
            android:id="@+id/btnDeleteQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginStart="4dp"/>

        <Button
            android:id="@+id/btnPublishToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publish"
            android:layout_marginStart="4dp"/>

        <Button
            android:id="@+id/btnSetTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Time"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

</LinearLayout>
