<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutCanteenStaff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#F8F8F8">

    <!-- Canteen Name (New, placed at the top) -->
    <TextView
        android:id="@+id/tvCanteenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canteen Name Placeholder"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp" />

    <!-- Welcome/Staff Name (Existing ID, now showing only staff name) -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Staff Name!"
        android:textSize="18sp"
        android:textColor="#555555"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/ivCanteenImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:contentDescription="Canteen Image"
        android:src="@drawable/ic_launcher_background"
        android:background="@android:color/darker_gray"
        android:clipToOutline="true"
        android:outlineProvider="background" />

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu Management"
        android:layout_marginTop="40dp"
        android:padding="14dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Orders (Coming Soon)"
        android:layout_marginTop="16dp"
        android:padding="14dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnReports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sales Reports (Coming Soon)"
        android:layout_marginTop="16dp"
        android:padding="14dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:backgroundTint="#D32F2F"
        android:layout_marginTop="32dp"
        android:padding="14dp"
        android:textSize="16sp"/>

</LinearLayout>