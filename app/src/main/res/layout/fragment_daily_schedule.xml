<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- Status TextView para sa "Walang Klase" -->
    <TextView
        android:id="@+id/tvFragmentStatus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Loading..."
        android:textColor="#888888"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <!-- TableLayout para sa Schedule -->
    <TableLayout
        android:id="@+id/tlFragmentSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2"
        android:background="@drawable/table_border"
        android:divider="@drawable/table_divider"
        android:showDividers="beginning|middle|end"
        android:visibility="visible">

        <!-- Header Row (Tatlong Columns: Time, Subject, Room) -->
        <TableRow android:background="#E0E0E0">
            <TextView
                android:text="Time"
                android:textStyle="bold"
                android:padding="8dp"
                android:textSize="12sp"
                android:textColor="@android:color/black" />
            <TextView
                android:text="Subject/Section"
                android:textStyle="bold"
                android:padding="8dp"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
            <TextView
                android:text="Room"
                android:textStyle="bold"
                android:padding="8dp"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </TableRow>
    </TableLayout>

</LinearLayout>
