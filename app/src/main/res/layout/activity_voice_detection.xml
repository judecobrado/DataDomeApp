<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Classroom Noise Monitor"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvNoiseStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Current Noise: 0 dB"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#374151"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"/>

    <ProgressBar
        android:id="@+id/noiseProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:max="100"
        android:progress="0"
        android:progressTint="#10B981"
        android:backgroundTint="#F3F4F6"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvNoiseStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/dbScaleLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/noiseProgressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="50 dB (Quiet)"
            android:textSize="12sp"
            android:textColor="#6B7280"/>

        <TextView
            android:id="@+id/tvThreshold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Target: 90 dB (Loud)"
            android:textSize="12sp"
            android:textColor="#F59E0B"
            android:gravity="end"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tvMusicStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Music System: DISABLED"
        android:textSize="18sp"
        android:textColor="#6B7280"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/dbScaleLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <ToggleButton
        android:id="@+id/toggleDetection"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textOn="STOP MONITORING"
        android:textOff="START MONITORING"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#10B981"
        android:textColor="@color/white"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvMusicStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>