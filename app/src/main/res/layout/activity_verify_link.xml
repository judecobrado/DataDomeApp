<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvVerifyInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A verification link has been sent to your email. Please click the link in your inbox to verify your email address."
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingBottom="24dp"/>

        <Button
            android:id="@+id/btnProceed"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="I Have Verified My Email"
            android:backgroundTint="#1D4ED8"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't receive the email? Resend"
            android:textColor="#1D4ED8"
            android:paddingTop="16dp"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</ScrollView>
