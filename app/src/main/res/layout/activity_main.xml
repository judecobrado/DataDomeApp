<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    android:paddingTop="64dp"
    android:paddingBottom="32dp"
    android:background="#0A1833"> <ImageView
    android:id="@+id/vMainIllustration"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@raw/logo_white"
    android:scaleType="fitCenter"
    android:contentDescription="Black and White App Logo"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/tvBranding"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginBottom="32dp"
    app:layout_constraintVertical_chainStyle="packed"
    app:tint="#D4AF37" /> <TextView
    android:id="@+id/tvBranding"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="sans-serif-light"
    android:text="DATA DOME"
    android:letterSpacing="0.1"
    android:textColor="#FFFFFF" android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/tvMainHeader"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/vMainIllustration"
    android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvMainHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Secure School Data Platform"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#D4AF37" android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvBranding"
        app:layout_constraintBottom_toTopOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Trusted infrastructure for administrative control, student performance tracking, and resource management."
        android:textColor="#A9B8D1" android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/btnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMainHeader"
        android:layout_marginBottom="60dp"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="ACCESS PORTAL" android:textSize="17sp"
        android:textStyle="bold"
        android:backgroundTint="#D4AF37" android:textColor="#0A1833" app:cornerRadius="4dp"
        app:layout_constraintBottom_toTopOf="@id/btnSignup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="ENROLL"
        android:textSize="17sp"
        android:textStyle="bold"
        android:backgroundTint="@android:color/transparent"
        android:textColor="#92C4F7" app:strokeColor="#92C4F7"
        app:strokeWidth="2dp"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toTopOf="@id/tvFooter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â© 2025 DataDome Solutions. All rights reserved."
        android:textSize="12sp"
        android:textColor="#59719E" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>