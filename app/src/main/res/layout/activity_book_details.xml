<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/elegantBlue"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Book Cover -->
        <ImageView
            android:id="@+id/imageBookDetail"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/book_image_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_book_placeholder" />

        <!-- Book Title -->
        <TextView
            android:id="@+id/textTitleDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/gold"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Author -->
        <TextView
            android:id="@+id/textAuthorDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Author Name"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginTop="4dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/textDescriptionDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book description will appear here..."
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="12dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“– Open Preview"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/gold"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02" />

            <Button
                android:id="@+id/btnPdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“˜ Open PDF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/gold"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>