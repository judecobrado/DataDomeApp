<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F9FAFB">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Verification"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp"/>

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A verification link has been sent to your email. Please check your inbox and click the link to proceed."
            android:textSize="16sp"
            android:textColor="#374151"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnResend"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Resend Verification Email"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#1D4ED8"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue to Enrollment"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#10B981"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>
