<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etMatchingQuestionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the title for this Matching Question (e.g., Match the capitals to countries)"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms (Left) and Matches (Right)"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMatchingPairs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnAddPair"
            android:text="Add New Pair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
