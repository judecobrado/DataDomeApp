<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvSectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Sections"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Section (Year &amp; Block):"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spnYearLevelDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:spinnerMode="dropdown"
        android:prompt="@string/select_year_level"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etSectionBlockDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Section Block (e.g., A, B, C)"
        android:minHeight="48dp"
        android:inputType="textCapCharacters"
        android:maxLength="3"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnAddSectionDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Section"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnDeleteSectionDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete Selected" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Existing Sections:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <ListView
        android:id="@+id/lvSectionsDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:background="@android:color/white"
        android:minHeight="150dp"/>

</LinearLayout>