<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".admin.ManageCoursesActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Courses &amp; Sections"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etCourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Name (e.g., Bachelor of Science in IT)"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etCourseCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Code (e.g., BSIT)"
        android:minHeight="48dp"
        android:maxLength="5"
        android:inputType="textCapCharacters"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etCourseDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Description"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnAddCourse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add New Course"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnDeleteCourse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete Selected Course" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Existing Courses (Select to Manage Sections):"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <ListView
        android:id="@+id/lvCourses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnManageRooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage School Rooms/Venues"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnManageSections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Sections for Selected Course"
        android:enabled="false"/>

</LinearLayout>